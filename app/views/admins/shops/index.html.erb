<link rel="stylesheet" href="shops.scss">


<h1>登録済花屋一覧</h1>

<table class ="table table-striped">
	<thead>
		<tr>
			<th>店名</th>
			<th>アドレス</th>
			<th>ユーザー名</th>
			<th>登録日時</th>
		</tr>
	</thead>

	<% @shops.each do |shop| %>
		<tbody>
			<td><%= shop.shop_name %></td>
			<td><%= shop.postal_code %><br/>
				<%= shop.prefecture_code %><br/>
				<%= shop.address_city %><br/>
				<%= shop.address_building %></td>
			<td><%= link_to shop.user.name %>さん</td>
			<td><%= shop.created_at.strftime("%Y-%m-%d") %></td>
		</tbody>
	<% end %>
</table>