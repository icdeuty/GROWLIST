<link rel="stylesheet" href="blogs.scss">


<h1>ブログ記事一覧</h1>

<table class ="table table-striped">
	<thead>
		<tr>
			<th>記事タイトル</th>
			<th>記事本文</th>
			<th>ユーザー名</th>
			<th>登録日時</th>
		</tr>
	</thead>

	<% @blogs.each do |blog| %>
		<tbody>
			<td><%= blog.title %></td>
			<td><%= blog.text %></td>
			<td><%= link_to blog.user.name %>さん</td>
			<td><%= blog.created_at.strftime("%Y-%m-%d") %></td>
		</tbody>
	<% end %>
</table>