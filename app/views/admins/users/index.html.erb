<link rel="stylesheet" href="users.scss">


<h1>ユーザー一覧</h1>

<table class ="table table-striped">
	<thead>
		<tr>
			<th>ユーザー画像</th>
			<th>ユーザー名</th>
			<th>プロフィール</th>
			<th>登録日時</th>
		</tr>
	</thead>

	<% @users.each do |user| %>
		<tbody>
			<td>
				<% if user.profile_img.blank? %>
					<div></div>
				<% else %>
					<%= image_tag attachment_url(user, :profile_img, :fill, 50, 50, format: "jpg") %>
				<% end %>
			</td>
			<td><%= link_to user.name, admins_user_path(user), method: :get %>さん</td>
			<td><%= user.profile  %></td>
			<td><%= user.created_at.strftime("%Y-%m-%d") %></td>
		</tbody>
	<% end %>
</table>