<link rel="stylesheet" href="tweets.scss">


<h1>タネ一覧</h1>

<table class ="table table-striped">
	<thead>
		<tr>
			<th>タネ本文</th>
			<th>ユーザー名</th>
			<th>登録日時</th>
		</tr>
	</thead>

	<% @tweets.each do |tweet| %>
		<tbody>
			<td><%= tweet.text %></td>
			<td><%= link_to tweet.user.name %>さん</td>
			<td><%= tweet.created_at.strftime("%Y-%m-%d") %></td>
		</tbody>
	<% end %>
</table>