<%= form_for @blog, url: users_blog_path(@blog),method: :patch do |f| %>

	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">Title</label>
		<%= f.text_field :title, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "タイトル" %>
	</div>

	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">Text</label>
		<%= f.text_area :text, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "本文" %>
	</div>

	<div class="form-group has-icon">
		<div class="user-edit-image">
			<%= image_tag attachment_url(@blog, :img, :fill, 400, 400, format: "jpg") %>
			<%#= attachment_image_tag @user, :img, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
		</div>
		<label class="control-label sr-only" for="imputEmail">Image</label>
		<%= f.attachment_field :img, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>
			
		</div>

	</div>

	<%= f.submit "ブログ内容を変更する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>