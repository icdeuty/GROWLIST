プロフィールの編集ページ

<%= form_for([:users,@user]) do |f| %>
	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">Name</label>
		<%= f.text_field :name, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "名前" %>
	</div>

	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">Email</label>
		<%= f.text_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "メールアドレス" %>
	</div>

	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">Profile</label>
		<%= f.text_field :profile, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "自己紹介" %>
	</div>

	<div class="form-group has-icon">
		<div class="user-edit-image">
			<%= attachment_image_tag @user, :profile_img, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
		</div>
		<label class="control-label sr-only" for="imputEmail">ProfileImage</label>
		<%= f.attachment_field :profile_img, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<%= f.submit "プロフィールを変更する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>